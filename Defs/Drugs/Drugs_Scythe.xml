<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>FF_Scythe</defName>
    <label>scythe</label>
    <description>A medical last-resort drug that massively boosts immunity. Developed against a pre-spacer era pandemic, the drug utilizes a chemotherapeutic mechanism to overstimulate the immune system. Resulting activity levels in the body are intolerable, causing the user to go into a two day coma.</description>
    <descriptionHyperlinks>

    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/Scythe</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MarketValue>76</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
      <Flammability>1.0</Flammability>
    </statBases>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>FF_ScytheHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>FF_ScytheProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>3</Neutroamine>
      <FF_RawPoisonIvy>20</FF_RawPoisonIvy>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>19</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>FF_ScytheHigh</defName>
    <label>scythe coma</label>
    <description>The user has fallen into a harmless coma due to being unable to cope with their body's immense immune response.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <setMax>0.25</setMax>
            </li>
          </capMods>
          <statOffsets>
            <ImmunityGainSpeed>0.5</ImmunityGainSpeed>
          </statOffsets>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <setMax>0.1</setMax>
            </li>
          </capMods>
          <statOffsets>
            <ImmunityGainSpeed>0.85</ImmunityGainSpeed>
          </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>