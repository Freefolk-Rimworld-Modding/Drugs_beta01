<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MakeableDrugPillBase">
    <defName>FF_Neoderm</defName>
    <label>neoderm</label>
    <description>An advanced regenerative ointment. Neoderm heals dermal scars over time through a mildly painful process. Has no effect on internal organs or eyes.</description>
    <descriptionHyperlinks>

    </descriptionHyperlinks>
    <graphicData>
      <texPath>Things/Item/Drug/Neoderm</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>3300</WorkToMake>
      <MarketValue>46</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
      <Flammability>1.0</Flammability>
    </statBases>
    <ingestible>
      <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>FF_NeodermHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
      <researchPrerequisite>FF_NeodermProduction</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <Neutroamine>2</Neutroamine>
      <FF_PoisonIvyLeaves>10</FF_PoisonIvyLeaves>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1011</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>FF_NeodermHigh</defName>
    <label>neoderm</label>
    <description>Neoderm on the skin. It heals dermal scars over time through a mildly painful process.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.9</severityPerDay>
        <showHoursToRecover>false</showHoursToRecover>
      </li>
      <li Class="FF_Drugs.KEPHediffCompProperties_SelectiveRegeneration">
        <exclusionList>
          <li>Brain</li>
          <li>Eye</li>
          <li>Heart</li>
          <li>Liver</li>
          <li>Lung</li>
          <li>Kidney</li>
          <li>Stomach</li>
		  <li>Spine</li>
        </exclusionList>
        <minTimeToHeal>8</minTimeToHeal>
        <maxTimeToHeal>15</maxTimeToHeal>
        <excludeChronic>true</excludeChronic>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.1</painOffset>
      </li>
    </stages>
  </HediffDef>

</Defs>